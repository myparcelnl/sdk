{% for label in labels %}
    <div class="order-row-label-list card p-1">
        <label>{{ label.status }}</label>
        <div class="order-row-label-information d-flex text-nowrap align-items-center">
            <a class="_blank" href="{{ label.track_link }}">{{ label.barcode }}</a>
            <button
                    class="btn btn-link btn-print-label{% if promptForLabelPosition %} label-modal{% endif %}"
                    type="button"
                    {% if promptForLabelPosition %}data-target="#print"{% endif %}
                    {% if promptForLabelPosition %}data-toggle="modal"{% endif %}
                    data-label-id="{{ label.id_label }}"
            >
                <i class="material-icons">
                    print
                </i>
            </button>
            <a
                    href="{{ getAdminLink('AdminMyParcelBELabel', true, {'action': 'updateLabel', 'labelId': label.id_label}) }}"
                    class="btn btn-link"
            >
                <i class="material-icons">
                    refresh
                </i>
            </a>
        </div>
    </div>
{% endfor %}
